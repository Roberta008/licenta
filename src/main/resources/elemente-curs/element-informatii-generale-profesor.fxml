<!--suppress JavaFxDefaultTag -->

<fx:root maxWidth="-Infinity" prefWidth="750.0" style="-fx-background-color: white; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 5, 0.2, 0, 1);" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lucrarelicenta2.controllere.profesor.ControllerInformatiiGeneraleProfesor">
    <children>
        <Label fx:id="labelTitlu" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #cc33ff; -fx-cursor: hand;" text="Informatie Generala" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="System Bold Italic" size="36.0" />
            </font>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
        </Label>
        <Label fx:id="labelMesaj" alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #b3b3b3; -fx-cursor: hand;" text="Informatie" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="System Italic" size="18.0" />
            </font>
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="15.0" />
            </VBox.margin>
        </Label>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: #330033;" text="Mesaje Utilizatori">
            <font>
                <Font name="System Italic" size="24.0" />
            </font>
            <VBox.margin>
